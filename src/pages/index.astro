---
import BaseHead from "../components/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import ClouWidgetReact from "../components/reactUi/CloudWidgetReact";
import ContainerMedia from "../components/reactUi/ContainerMedia";
import { CldUploadWidget } from "astro-cloudinary";
import HeaderPresentation from "../components/reactUi/HeaderPresentation";
import LayoutApp from "../components/reactUi/LayoutApp";
import MainAction from "../components/reactUi/MainAction";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="flex h-screen">
    <div id="modal-root"></div>
    <LayoutApp client:load>
      <HeaderPresentation client:only="react" />
      <MainAction client:load>
        <ContainerMedia client:load>
          <></>
        </ContainerMedia>
      </MainAction>
    </LayoutApp>
  </body>
</html>

<script src="https://widget.cloudinary.com/v2.0/global/all.js" is:inline
></script>
